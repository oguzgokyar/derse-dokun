{
    "name": "Derse Dokun",
    "version": "0.1",
    "description": "Google Meet'i etkileşimli bir sınıfa çevirir.",
    "permissions": [
        "activeTab",
        "identity"
    ],
    "web_accessible_resources": [
        "button.html",
        "board-button.html",
        "student-board.html",
        "hand-red.png",
        "hand-blue.png",
        "hand-green.png",
        "hand-gray.png"
    ],
    "content_scripts": [{
        "matches": [
            "https://meet.google.com/*"
        ],
        "js": [
            "ui.js",
            "jquery.js",
            "firebase-app.js",
            "firebase-firestore.js"
        ],
        "css": [
            "styles.css"
        ]
    }],
    "manifest_version": 2
}